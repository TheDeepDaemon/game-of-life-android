<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/et_enterNewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter a new name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.228" />

    <TextView
        android:id="@+id/tv_enterNewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/et_enterNewName"
        app:layout_constraintEnd_toStartOf="@id/et_enterNewName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_enterNewName" />

    <TextView
        android:id="@+id/tv_enterNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/et_enterNewPass"
        app:layout_constraintEnd_toEndOf="@+id/tv_enterNewName"
        app:layout_constraintStart_toStartOf="@+id/tv_enterNewName"
        app:layout_constraintTop_toTopOf="@id/et_enterNewPass" />

    <Button
        android:id="@+id/btn_submitNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@id/et_enterNewPass"
        app:layout_constraintTop_toBottomOf="@id/et_enterNewPass" />

    <EditText
        android:id="@+id/et_enterNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Enter a new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@id/et_enterNewName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/et_enterNewName"
        app:layout_constraintTop_toBottomOf="@id/et_enterNewName" />

    <Button
        android:id="@+id/btn_newProfGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Go back"
        app:layout_constraintEnd_toEndOf="@+id/btn_submitNewAccount"
        app:layout_constraintTop_toBottomOf="@+id/btn_submitNewAccount" />
</androidx.constraintlayout.widget.ConstraintLayout>