<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/et_udName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.294" />

    <EditText
        android:id="@+id/et_udPassOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter current password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_udName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_udName"
        app:layout_constraintTop_toBottomOf="@+id/et_udName"
        app:layout_constraintVertical_bias="0.085" />

    <TextView
        android:id="@+id/tv_udName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/et_udName"
        app:layout_constraintEnd_toStartOf="@+id/et_udName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_udName" />

    <TextView
        android:id="@+id/tv_udPassEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_udPassOld"
        app:layout_constraintEnd_toEndOf="@+id/tv_udName"
        app:layout_constraintStart_toStartOf="@+id/tv_udName"
        app:layout_constraintTop_toTopOf="@+id/et_udPassOld" />

    <EditText
        android:id="@+id/et_udPassNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter new password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_udPassOld"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_udPassOld"
        app:layout_constraintTop_toBottomOf="@+id/et_udPassOld"
        app:layout_constraintVertical_bias="0.126" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New password:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_udPassNew"
        app:layout_constraintEnd_toEndOf="@+id/tv_udPassEnter"
        app:layout_constraintStart_toStartOf="@+id/tv_udPassEnter"
        app:layout_constraintTop_toTopOf="@+id/et_udPassNew" />

    <Button
        android:id="@+id/btn_submitNewPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@+id/et_udPassNew"
        app:layout_constraintTop_toBottomOf="@+id/et_udPassNew" />

    <Button
        android:id="@+id/btn_udPassGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Go back"
        app:layout_constraintEnd_toEndOf="@+id/btn_submitNewPass"
        app:layout_constraintTop_toBottomOf="@+id/btn_submitNewPass" />
</androidx.constraintlayout.widget.ConstraintLayout>